{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "types": ["node", "tld-extract"]
    }
  },
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "ES6",
    "lib": ["esnext", "dom"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": [
      "paf-mvp-core-js/@types",
      "paf-mvp-demo-express/@types",
      "node_modules/@types"
    ],
    "paths": {
      "@onekey/operator-node/*": ["./paf-mvp-operator-express/src/*"],
      "@onekey/client-node/*": ["./paf-mvp-client-express/src/*"],
      "@onekey/frontend/*": ["./paf-mvp-frontend/src/*"],
      "@test-helpers/*": ["./paf-mvp-core-js/tests/helpers/*"],
      "@test-fixtures/*": ["./paf-mvp-core-js/tests/fixtures/*"]
    }
  },
  "exclude": [
    "paf-mvp-frontend/cypress",
    "paf-mvp-audit/cypress",
    "addressability-framework",
    "**/tests"
  ]
}
