<!DOCTYPE html>
<html lang="html">
<head>
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon.png">
    <meta name="viewport" content="width=device-width"/>
    <title>
        {{subject}}
    </title>
    <style>
        table {
            border: solid 1px black;
        }

        table td, th {
            padding: 4px;
            border: solid 1px rgba(0, 0, 0, 0.46);
        }

        .json {
            text-align: left;
        }

        div {
            text-align: center;
        }

        div.status {
            font-size: 1.5em;
            font-weight: bold;
            padding-bottom: 1em;
        }

        a {
            font-weight: bold;
            text-decoration: none;
        }
    </style>
    <link rel=stylesheet href=https://cdn.jsdelivr.net/npm/pretty-print-json@1.2/dist/pretty-print-json.css>
    <script src=https://cdn.jsdelivr.net/npm/pretty-print-json@1.2/dist/pretty-print-json.min.js></script>
</head>
<body>


<div class="status">
    {{#if cookies.paf_identifiers}}
        You have an ID!
    {{else}}
        You don't have ID yet!
    {{/if}}
</div>

<div>
    <table align="center">
        <tr>
            <th>ID</th>
            <td colspan="3" class="json">
                {{#if cookies.paf_identifiers}}
                    <pre id="ids" class="json-container"></pre>
                    <script>
                        document.getElementById('ids').innerHTML = prettyPrintJson.toHtml({{{ cookies.paf_identifiers }}}, {quoteKeys: true});
                    </script>
                {{else}}
                    no ID cookie
                {{/if}}</td>
            <td>{{#if cookies.paf_identifiers}}<a href="{{removeIdUrl}}" style="color: red">üóë remove ID</a>{{else}}
                <a href="{{createIdUrl}}">Generate ID cookie</a>{{/if}}</td>
        </tr>
        <tr>
            <th>Preferences</th>
            <td class="json">
                {{#if cookies.paf_preferences}}

                    <pre id="prefs" class="json-container"></pre>
                    <script>
                        document.getElementById('prefs').innerHTML = prettyPrintJson.toHtml({{{ cookies.paf_preferences }}}, {quoteKeys: true});
                    </script>
                {{else}}
                    no preferences cookie
                {{/if}}</td>
            <td>{{#if optInUrl}}<a href="{{optInUrl}}" style="color: green">‚úÖ opt in</a>{{/if}}</td>
            <td>{{#if optOutUrl}}<a href="{{optOutUrl}}" style="color: black">‚ùå opt out</a>{{/if}}</td>
            <td>{{#if cookies.paf_preferences}}
                <a href="{{removePrefsUrl}}" style="color: red">üóë remove preferences</a>{{/if}}
            </td>
        </tr>
    </table>
</div>

<script>
    const verifyUrl = "{{verifyUrl}}";
    const validate = async () => {

        resetResult();

        const payload = JSON.parse(document.getElementById("input").value);
        const type = document.getElementById("type").value;

        const response = await fetch(verifyUrl, {
            method: 'POST',
            mode: 'cors',
            cache: 'no-cache',
            credentials: 'same-origin',
            headers: {
                'Content-Type': 'application/json'
            },
            redirect: 'follow',
            referrerPolicy: 'no-referrer',
            body: JSON.stringify(
                    {
                        payload,
                        type
                    }
            )
        });

        document.getElementById('result').innerHTML = prettyPrintJson.toHtml(await response.json());
    }

    const resetResult = () => {
        document.getElementById('result').innerHTML = '';
    }
</script>

<div>
    <table align="center">
        <tr>
            <td>
                <label for="input">Enter the message or cookie value to validate (must be valid JSON):</label>
                <br>
                <textarea id="input" rows="40" cols="120" oninput="resetResult()"></textarea>
            </td>
        </tr>
        <tr>
            <td>
                <label>
                    Type
                    <select id="type">
                        {{#each dataTypes}}
                            <option value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                </label>
                <button onclick="validate()">Go</button>
            </td>
        </tr>
        <tr>
            <td class="json">
                <pre id="result" class="json-container"></pre>
            </td>
        </tr>
    </table>


</div>

</body>
</html>
